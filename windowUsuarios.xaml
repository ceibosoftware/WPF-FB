        </Border>
        <Label x:Name="lblUser_Copy" Content="Iniciar sesión" HorizontalAlignment="Left" Margin="274.779,166.167,0,0" VerticalAlignment="Top" Width="224.747" Foreground="White" FontSize="14" Height="37" Style="{DynamicResource LabelStyle_HeaderPagina}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBlock x:Name="txtGuia" HorizontalAlignment="Left" Height="216.989" TextWrapping="Wrap" Text="Inicie sesión para administrar el programa. Puede acceder con su usuario o crear uno nuevo. Una vez haya completado sus datos haga click en &quot;Acceder&quot;. " VerticalAlignment="Top" Width="136.276" Margin="765.276,175.515,0,0" Foreground="#FFC9C5C5" FontSize="11"/>
