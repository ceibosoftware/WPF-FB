<Page x:Class="wpfFamiliaBlanco.Entradas.DevolucionRemito"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:wpfFamiliaBlanco.Entradas"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="DevolucionRemito" Width="1014" Height="405">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="89*"/>
            <ColumnDefinition Width="56*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Proveedor" HorizontalAlignment="Left" Margin="383,34,0,0" VerticalAlignment="Top" Height="34" Width="88" FontSize="14" RenderTransformOrigin="1.469,1"/>
        <Label Content="Fecha" HorizontalAlignment="Left" Margin="409,98,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.739,0.249" Height="36" Width="62" FontSize="14"/>
        <TextBox x:Name="txtProveedor" HorizontalAlignment="Left" Height="22" Margin="56,62,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="395"/>
        <DatePicker x:Name="dpFecha" HorizontalAlignment="Left" Margin="56,126,0,0" VerticalAlignment="Top" Height="22" Width="395"/>
        <Label Content="Remitos" HorizontalAlignment="Left" Margin="393,164,0,0" VerticalAlignment="Top" Height="36" Width="80" FontSize="14"/>
        <ListBox x:Name="ltsRemitos" HorizontalAlignment="Left" Height="134" Margin="56,188,0,0" VerticalAlignment="Top" Width="395" SelectionChanged="ltsRemitos_SelectionChanged"/>
        <DataGrid x:Name="dgvProductosRemito" HorizontalAlignment="Left" Height="133" Margin="496,63,0,0" VerticalAlignment="Top" Width="414" Grid.ColumnSpan="2"/>
        <Label x:Name="Productos_Remito" Content="" HorizontalAlignment="Left" Margin="203,28,0,0" VerticalAlignment="Top" Height="34" Width="72" FontSize="14" RenderTransformOrigin="1.469,1" Grid.Column="1"/>
        <Label Content="Productos remito" HorizontalAlignment="Left" Margin="175,34,0,0" VerticalAlignment="Top" Height="34" Width="130" FontSize="14" RenderTransformOrigin="1.469,1" Grid.Column="1"/>
        <Button x:Name="btnAgregar" Content="Agregar" HorizontalAlignment="Left" Margin="289,323,0,0" VerticalAlignment="Top" Width="75" Click="btnAgregar_Click" Height="23" Grid.Column="1" Style="{DynamicResource agregar}"/>
    </Grid>
</Page>
