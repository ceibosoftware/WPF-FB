<Window x:Class="wpfFamiliaBlanco.Clientes.windowAgregarProducto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfFamiliaBlanco.Clientes"
        mc:Ignorable="d"
        Title="windowAgregarProducto" Height="450" Width="800">
    <Grid Background="black">
        <TextBox x:Name="txtnombre" HorizontalAlignment="Left" Height="23" Margin="251,111,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Nombre" HorizontalAlignment="Left" Margin="172,111,0,0" VerticalAlignment="Top"/>
        <Label Content="Precio Unitario" HorizontalAlignment="Left" Margin="138,165,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtpreciou" HorizontalAlignment="Left" Height="23" Margin="251,165,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Precio de Lista" HorizontalAlignment="Left" Margin="140,226,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.002,0.556"/>
        <TextBox x:Name="txtpreciolista" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Margin="251,226,0,0"/>
        <Button Content="Aceptar" HorizontalAlignment="Left" Margin="633,277,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button Content="Cancelar" HorizontalAlignment="Left" Margin="633,298,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
